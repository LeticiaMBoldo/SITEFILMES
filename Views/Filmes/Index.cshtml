@model IEnumerable<SiteFilmes.Models.Filme>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tituloOriginal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tituloBrasil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sinopse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataEstreia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tituloOriginal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tituloBrasil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sinopse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataEstreia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idFilme">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idFilme">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idFilme">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
