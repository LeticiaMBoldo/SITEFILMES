@model IEnumerable<SiteFilmes.Models.Genero>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeGenero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeGenero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idGenero">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idGenero">Details</a> |
